# MQTT broker connection
MQTT_HOST=emqx
MQTT_PORT=1883

# MQTT_BROKER_URL=mqtt://emqx:1883
MQTT_CLIENT_ID=bus_riders_mqtt_ingestion
MQTT_USERNAME=
MQTT_PASSWORD=
# If MQTT_PASSWORD is empty, the service signs a JWT using this secret.
# Use the same secret as backend APP_ID and EMQX JWT auth secret.
MQTT_JWT_SECRET=
MQTT_JWT_EXP_SECONDS=86400
# MQTT_JWT_AUDIENCE=
MQTT_SUBSCRIBE_TOPIC=gps/+/+/+
MQTT_SUBSCRIBE_QOS=0
MQTT_KEEPALIVE=60
MQTT_RECONNECT_PERIOD_MS=1000

# KeyDB (Redis-compatible) settings
KEYDB_URL=redis://keydb:6379
KEYDB_CLIENT_NAME=bus_riders_mqtt
KEYDB_MESSAGE_HISTORY=200
KEYDB_MESSAGE_TTL_SECONDS=0
BUS_STATE_TTL_SECONDS=15
ROUTE_CACHE_TTL_MS=300000
